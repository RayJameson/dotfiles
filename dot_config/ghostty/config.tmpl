theme = Dracula
cursor-color = #ffffff
background-opacity = 0.7
background-blur-radius = 20
copy-on-select = true
adjust-underline-thickness = -2
adjust-cursor-thickness = -2
adjust-box-thickness = -2
gtk-titlebar = false
gtk-single-instance = true
gtk-tabs-location = bottom
gtk-wide-tabs = false
window-decoration = false

# Font
font-size = {{ if eq .chezmoi.os "linux" }}19{{ else if eq .chezmoi.os "darwin" }}24{{ end }}
freetype-load-flags = false
font-synthetic-style = false

font-family = Iosevka Nerd Font Mono
font-style = Condensed ExtraLight

font-family-bold = Iosevka Nerd Font Mono
font-style-bold = Condensed Medium

font-family-italic = Iosevka Nerd Font Mono
font-style-italic = Condensed ExtraLight Oblique

font-family-bold-italic = Iosevka Nerd Font Mono
font-style-bold-italic = Condensed Medium Oblique

# MacOS specific stuff
macos-option-as-alt = true
macos-auto-secure-input = true

# Resize splits
keybind = ctrl+shift+h=resize_split:left,20
keybind = ctrl+shift+k=resize_split:up,20
keybind = ctrl+shift+j=resize_split:down,20
keybind = ctrl+shift+l=resize_split:right,20

keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down

keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1

keybind = ctrl+b>\=new_split:right
keybind = ctrl+b>-=new_split:down
keybind = ctrl+b>h=goto_split:left
keybind = ctrl+b>j=goto_split:top
keybind = ctrl+b>k=goto_split:bottom
keybind = ctrl+b>l=goto_split:right
keybind = ctrl+b>x=close_surface
keybind = ctrl+b>n=next_tab
keybind = ctrl+b>p=previous_tab
keybind = ctrl+b>c=new_tab
keybind = ctrl+b>+one=goto_tab:1
keybind = ctrl+b>+two=goto_tab:2
keybind = ctrl+b>+three=goto_tab:3
keybind = ctrl+b>+four=goto_tab:4
keybind = ctrl+b>+five=goto_tab:5
keybind = ctrl+b>+six=goto_tab:6
keybind = ctrl+b>+seven=goto_tab:7
keybind = ctrl+b>+eight=goto_tab:8
keybind = ctrl+b>+nine=goto_tab:9

